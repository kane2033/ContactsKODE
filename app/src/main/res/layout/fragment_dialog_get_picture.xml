<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.ContactsKODE.ContactInfo">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/takePhotoButton"
            style="@style/bottom_sheet_item"
            android:text="@string/contact_avatar_take_picture"
            android:drawableStart="@drawable/ic_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/choosePhotoButton"
            style="@style/bottom_sheet_item"
            android:drawableStart="@drawable/ic_gallery"
            android:text="@string/contact_avatar_from_gallery"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/takePhotoButton"
            app:layout_constraintStart_toStartOf="@id/takePhotoButton"
            app:layout_constraintTop_toBottomOf="@id/takePhotoButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>